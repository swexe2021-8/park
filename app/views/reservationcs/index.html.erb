<p id="notice"><%= notice %></p>


<h1>予約システム</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>開始時刻</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservationcs.each do |reservationc| %>
      <tr>
        <td><%= reservationc.name %></td>
        <td><%= reservationc.start_time %></td>
        <td><%= link_to '表示', reservationc %></td>
        <td><%= link_to '変更', edit_reservationc_path(reservationc) %></td>
        <td><%= link_to '削除', reservationc, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @reservationcs do |date, reservations| %>
  <%= date %>

  <% reservations.each do |reservation| %>
    <div>
      <%= reservation.start_time.hour %>:<%= reservation.start_time.min %>
      <%= reservation.name %>
    </div>
  <% end %>
<% end %>


<%= link_to '新規予約', new_reservationc_path %>